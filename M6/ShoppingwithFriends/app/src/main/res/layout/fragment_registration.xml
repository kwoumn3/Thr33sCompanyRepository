<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3e50">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Username"
        android:ems="10"
        android:id="@+id/inputRegistrationUsernameText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:text="Email@Example.com"
        android:ems="10"
        android:id="@+id/inputRegistrationEmailText"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/inputRegistrationUsernameText"
        android:layout_alignLeft="@+id/inputRegistrationUsernameText"
        android:layout_alignStart="@+id/inputRegistrationUsernameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="Password"
        android:ems="10"
        android:id="@+id/inputRegistrationPasswordText"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/inputRegistrationEmailText"
        android:layout_alignLeft="@+id/inputRegistrationEmailText"
        android:layout_alignStart="@+id/inputRegistrationEmailText" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnRegistrationConfirm"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="201dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnRegistrationCancel"
        android:layout_marginTop="58dp"
        android:layout_alignTop="@+id/btnRegistrationConfirm"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username has been taken."
        android:id="@+id/textRegistrationIncorrectInput"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textColor="#FFFFFF" />


</RelativeLayout>